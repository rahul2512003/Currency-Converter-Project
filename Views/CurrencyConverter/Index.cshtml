@model CurrencyConverter.Models.CurrencyConverterModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Currency Converter</title>
    <!-- Include Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container mt-5">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white text-center">
                <h2>Currency Converter</h2>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Convert", "CurrencyConverter", FormMethod.Post, new { @class = "needs-validation" }))
                {
                    <div class="mb-3">
                        <label for="Amount" class="form-label">Amount</label>
                        @Html.TextBoxFor(m => m.Amount, new { @class = "form-control", placeholder = "Enter amount" })
                    </div>

                    <div class="mb-3">
                        <label for="FromCurrency" class="form-label">From Currency</label>
                        @Html.TextBoxFor(m => m.FromCurrency, new { @class = "form-control", placeholder = "e.g., USD" })
                    </div>

                    <div class="mb-3">
                        <label for="ToCurrency" class="form-label">To Currency</label>
                        @Html.TextBoxFor(m => m.ToCurrency, new { @class = "form-control", placeholder = "e.g., EUR" })
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary w-100">Convert</button>
                    </div>
                }

                @if (Model != null && Model.ConvertedAmount > 0)
                {
                    <div class="alert alert-success mt-4 text-center">
                        <h5>Conversion Result</h5>
                        <p>
                            <strong>@Model.Amount @Model.FromCurrency</strong> =
                            <strong>@Model.ConvertedAmount @Model.ToCurrency</strong>
                        </p>
                    </div>
                }
                else if (Model != null && Model.ConvertedAmount == 0)
                {
                    <div class="alert alert-warning mt-4 text-center">
                        <p>No conversion result available. Please check the input.</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Include Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
